<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/time_set"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wifiSSID_tv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="@string/main_control_timing_turn_on"
        android:textSize="20sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <com.gizwits.framework.widget.WheelView
                android:id="@+id/wheel_view_timing"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <com.gizwits.framework.widget.WheelView
                android:id="@+id/wheel_view_timing_min"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/text_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/confi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/confirm"
            android:textColor="@color/text_blue"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/9-IoT/Cloud%2D%2DGizwit/Android/Gizwits-SmartSocket_Android/app/src/main/res/layout/dialog_2choose_timing_conditioner.xml -->